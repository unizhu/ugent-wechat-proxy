# UGENT WeChat Proxy Configuration

# Required: WeChat token for signature verification
WECHAT_TOKEN=your_wechat_token_here

# Required: API key for authenticating UGENT clients
PROXY_API_KEY=your_secure_api_key_here

# Optional: WeChat encoding AES key (43 characters, for security mode)
# WECHAT_ENCODING_AES_KEY=

# Optional: WeChat AppID (required if using encryption)
# WECHAT_APP_ID=

# Server addresses
WEBHOOK_ADDR=0.0.0.0:8080
WEBSOCKET_ADDR=0.0.0.0:8081

# Client restrictions (comma-separated, empty = allow all)
# ALLOWED_CLIENTS=ugent-main,ugent-dev

# Message timeout (seconds, WeChat requires response within 5s)
MESSAGE_TIMEOUT_SECS=5

# Rate limiting (messages per minute per client)
RATE_LIMIT=100

# Max concurrent WebSocket connections per client
MAX_CONNECTIONS_PER_CLIENT=10

# Debug mode (log raw messages)
# DEBUG_MODE=1

# Logging level
RUST_LOG=info,ugent_wechat_proxy=debug
